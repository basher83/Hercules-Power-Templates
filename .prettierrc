{
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 100,
  "singleQuote": false,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 80,
        "proseWrap": "always"
      }
    },
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "singleQuote": false,
        "tabWidth": 2,
        "bracketSpacing": true
      }
    },
    {
      "files": "*.json",
      "options": {
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    {
      "files": ["CHANGELOG.md", "WARP.md", "README.md"],
      "options": {
        "printWidth": 80,
        "proseWrap": "preserve"
      }
    }
  ]
}
