# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Shell scripts (keep portable for different systems)
[{*.sh,*.bash}]
indent_size = 2
max_line_length = 100

# YAML files (consistent with prettier)
[{*.yml,*.yaml}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# Markdown files (align with prettier prose wrapping)
[*.md]
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = false  # Preserve intentional trailing spaces

# Configuration files
[{*.toml,*.ini}]
indent_size = 2

# Documentation that should preserve formatting
[{CHANGELOG.md,WARP.md,README.md}]
max_line_length = 80
trim_trailing_whitespace = false
